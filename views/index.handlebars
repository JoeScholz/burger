<h1>Burgers!</h1>

<h2>Eat-Da-Burger!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">
    <div class="form-group">
        <label for="name"></label>
        <textarea id="name" name="burger_name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
    </div>
    <button type="submit">Add Burger</button>
</form>     